  {
    "label": "Sample Options",
    "info": "",
    "collapsed": false,
    "variables": {
      "visr.param.treatment": {
        "info": "list of 0 and 1 denoting which samples are control which samples are test",
        "type": "string",
        "default": "1, 1, 0, 0"
      },
      "visr.param.assembly": {
        "info": "a string that defines the genome assembly such as hg18, mm9. this is just a string for book keeping. It can be any string. Although, when using multiple files from the same assembly, this string should be consistent in each object.",
        "type": "string",
        "default": "hg18"
      },
      "visr.param.context": {
        "label": "methylation context string",
        "info": "Determines what type of methylation context will be read-in to the memory which can be immediately used for analysis.",
        "type": "string",
        "items": ["CpG", "CHG", "CHH", "none"]
      }
    }
  },
  {
    "label": "Output Options",
    "info": "",
    "collapsed": false,
    "variables": {
      "visr.param.save.folder": {
        "label": "Save Folder",
        "info": "The folder which will be used to save methylation call files. if not specified no methylation call file will be saved as a text file. The files saved can be read in less time using 'Methylation Call' input type option",
        "type": "filename",
        "filename.mode": "dir",
        "active-condition": "visr.param.methcallorbismark == 'Bismark'"
      },
      "visr.param.outputtype": {
        "label": "Output Plot Type",
        "type": "string",
        "items": ["Methylation", "Coverage", "Correlation", "Clustering", "PCA", "Differential Methylation Annotation"],
        "item-labels": ["Methylation", "Coverage", "Correlation (MultiFile Only)", "Clustering (MultiFile MethCall Only)", "PCA (MultiFile MethCall Only)", "Differential Methylation Annotation (MultiFile MethCall Only)"]
      }
    }
  },
  {
    "label": "Methylation: Coverage Options",
    "info": "",
    "collapsed": false,
    "variables": {
      "visr.param.filechoose": {
        "label": "Choose file number for plots",
        "type": "int",
        "default": 1,
        "min": 1,
        "max": 4
      },
      "visr.param.bothstrands": {
        "label": "Both strands",
        "type": "boolean",
        "default": false
      }
    }
  },
  {
    "label": "Correlation/Clustering/PCA Options",
    "info": "",
    "collapsed": false,
    "variables": {
      "visr.param.methmin": {
        "label": "CpGs with >=1 sample per group only",
        "type": "boolean",
        "default": false
      },
      "visr.param.clusteringdist": {
        "label": "Clustering Distance Measure",
        "type": "string",
        "default": "correlation",
        "items": ["correlation", "euclidean", "maximum", "manhattan", "binary", "minkowski"]
      },
      "visr.param.clusteringmethod": {
        "label": "Clustering Method",
        "type": "string",
        "default": "ward",
        "items": ["ward", "single", "complete", "average", "mcquitty", "median", "centroid"]
      },
      "visr.param.screeoraxis": {
        "label": "PCA Plot Type",
        "type": "string",
        "default": "PCA Scree Plot",
        "items": ["PCA Scree Plot", "PCA Axis Plot"]
      }
    }
  },
  {
    "label": "Differential Methylation Annotation Options",
    "info": "",
    "collapsed": false,
    "variables": {
      "visr.param.overlap": {
        "label": "Overlap With",
        "type": "string",
        "default": "Exons/Introns/Promoters",
        "items": ["Exons/Introns/Promoters", "CpG Islands"]
      },
      "visr.param.difference": {
        "label": "Percent Methylation Difference",
        "type": "int",
        "default": 25,
        "min": 0,
        "max": 100
      },
      "visr.param.qvalue": {
        "label": "q-value",
        "type": "double",
        "default": 0.01,
        "min": 0,
        "max": 1
      }
    }
  },
  {
    "label": "Filter By Coverage",
    "info": "",
    "collapsed": false,
    "variables": {
      "visr.param.filter": {
        "label": "Filter samples based on read coverage",
        "type": "boolean",
        "default": false
      },
      "visr.param.locount": {
        "label": "Coverage lower limit in count",
        "type": "int",
        "default": 10,
        "min": 0,
        "max": 100
      },
      "visr.param.loperc": {
        "label": "Coverage lower limit in percentile",
        "type": "double",
        "default": 0,
        "min": 0,
        "max": 100
      },
      "visr.param.hiperc": {
        "label": "Coverage upper limit in percentile",
        "type": "double",
        "default": 99.9,
        "min": 0,
        "max": 100
      }
    }
